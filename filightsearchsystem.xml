<?xml version="1.0" encoding="UTF-8"?>
<project name="filightsearchsystem" default="all">
  
  
  <property file="filightsearchsystem.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.zip"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/access-bridge-64.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.maven:_javax.validation:validation-api:2.0.0.final.classpath">
    <pathelement location="${path.variable.maven_repository}/javax/validation/validation-api/2.0.0.Final/validation-api-2.0.0.Final.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="forms-*.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module FlightSearchSystem -->
  
  <dirname property="module.flightsearchsystem.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.flightsearchsystem" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.flightsearchsystem" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.flightsearchsystem" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.flightsearchsystem" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="flightsearchsystem.output.dir" value="${module.flightsearchsystem.basedir}/target/classes"/>
  <property name="flightsearchsystem.testoutput.dir" value="${module.flightsearchsystem.basedir}/target/test-classes"/>
  
  <path id="flightsearchsystem.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="flightsearchsystem.module.production.classpath">
    <path refid="${module.jdk.classpath.flightsearchsystem}"/>
    <path refid="library.maven:_javax.validation:validation-api:2.0.0.final.classpath"/>
  </path>
  
  <path id="flightsearchsystem.runtime.production.module.classpath">
    <pathelement location="${flightsearchsystem.output.dir}"/>
    <path refid="library.maven:_javax.validation:validation-api:2.0.0.final.classpath"/>
  </path>
  
  <path id="flightsearchsystem.module.classpath">
    <path refid="${module.jdk.classpath.flightsearchsystem}"/>
    <pathelement location="${flightsearchsystem.output.dir}"/>
    <path refid="library.maven:_javax.validation:validation-api:2.0.0.final.classpath"/>
  </path>
  
  <path id="flightsearchsystem.runtime.module.classpath">
    <pathelement location="${flightsearchsystem.testoutput.dir}"/>
    <pathelement location="${flightsearchsystem.output.dir}"/>
    <path refid="library.maven:_javax.validation:validation-api:2.0.0.final.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.flightsearchsystem">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.flightsearchsystem">
    <patternset refid="excluded.from.module.flightsearchsystem"/>
  </patternset>
  
  <path id="flightsearchsystem.module.sourcepath">
    <dirset dir="${module.flightsearchsystem.basedir}">
      <include name="src/main/java"/>
      <include name="src/main/resources"/>
    </dirset>
  </path>
  
  <path id="flightsearchsystem.module.test.sourcepath">
    <dirset dir="${module.flightsearchsystem.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.flightsearchsystem" depends="compile.module.flightsearchsystem.production,compile.module.flightsearchsystem.tests" description="Compile module FlightSearchSystem"/>
  
  <target name="compile.module.flightsearchsystem.production" depends="register.custom.compilers" description="Compile module FlightSearchSystem; production classes">
    <mkdir dir="${flightsearchsystem.output.dir}"/>
    <javac2 destdir="${flightsearchsystem.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.flightsearchsystem}/javac">
      <compilerarg line="${compiler.args.flightsearchsystem}"/>
      <bootclasspath refid="flightsearchsystem.module.bootclasspath"/>
      <classpath refid="flightsearchsystem.module.production.classpath"/>
      <src refid="flightsearchsystem.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.flightsearchsystem"/>
    </javac2>
    
    <copy todir="${flightsearchsystem.output.dir}">
      <fileset dir="${module.flightsearchsystem.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.flightsearchsystem.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.flightsearchsystem.tests" depends="register.custom.compilers,compile.module.flightsearchsystem.production" description="compile module FlightSearchSystem; test classes" unless="skip.tests">
    <mkdir dir="${flightsearchsystem.testoutput.dir}"/>
    <javac2 destdir="${flightsearchsystem.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.flightsearchsystem}/javac">
      <compilerarg line="${compiler.args.flightsearchsystem}"/>
      <bootclasspath refid="flightsearchsystem.module.bootclasspath"/>
      <classpath refid="flightsearchsystem.module.classpath"/>
      <src refid="flightsearchsystem.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.flightsearchsystem"/>
    </javac2>
    
    <copy todir="${flightsearchsystem.testoutput.dir}">
      <fileset dir="${module.flightsearchsystem.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.flightsearchsystem" description="cleanup module">
    <delete dir="${flightsearchsystem.output.dir}"/>
    <delete dir="${flightsearchsystem.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.flightsearchsystem" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.flightsearchsystem" description="build all modules"/>

<target name="jar">
  <mkdir dir="build/jar"></mkdir>
  <jar destfile="build/jar/FlightSearch.jar" basedir="build">
    <manifest>
      <attribute name="Main-Class" value="main/java/com/nagarro/dto/FlightSearchSystem"/>
    </manifest>
  </jar>
</target>


  <target name="run">
    <java jar="build/jar/FlightSearch.jar" fork="true"/>
  </target>

  <target name="all" depends="build.modules" description="build all"/>
</project>